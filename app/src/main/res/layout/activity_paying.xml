<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_paying"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.PayingPage.payingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="결제항목"
            android:textSize="10pt"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_weight="7"/>

    <ListView
        android:id="@+id/selectedItemListOnPayingPageTag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.6"
        android:gravity="center"/>

        <TextView
            android:id="@+id/totalPriceTag"
            android:text="total price"
            android:textSize="10pt"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="7"/>

    <Button
        android:id="@+id/payingButtonInPayingTag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:text="결제하기 - kakao pay"
        android:textSize="10pt"
        android:layout_weight="7"
        />
    </LinearLayout>

</RelativeLayout>
