<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Boss.Fragments.itemListFragmentPage.itemAddPage.itemAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Register Item"
            android:textSize="10pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/itemNameTextOnItemRegisterTag"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:hint="Item Name"
                android:inputType="textShortMessage"
                android:padding="10dp" />

            <EditText
                android:id="@+id/itemPriceTextOnItemRegisterTag"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:hint="Price"
                android:inputType="phone"
                android:padding="10dp" />

            <EditText
                android:id="@+id/itemInformationTextOnItemRegisterTag"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="3"
                android:background="#FFFFFF"
                android:hint="Item Information"
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <Button
                android:id="@+id/itemRegisterButtonOnItemRegisterTag"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Register"
                android:textSize="10pt" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
