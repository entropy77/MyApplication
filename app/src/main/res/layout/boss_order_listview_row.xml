<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/order_idText_boss_order_listview_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="order_id"/>

    <TextView
        android:id="@+id/statusText_boss_order_listview_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="status"/>

    <TextView
        android:id="@+id/account_idText_boss_order_listview_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="account_id"/>

    <TextView
        android:id="@+id/company_idText_boss_order_listview_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="company_id"/>

    <TextView
        android:id="@+id/phoneText_boss_order_listview_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="phone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tableNumber_boss_order_listview_row_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="#"
            android:gravity="center"
            android:textSize="13pt"/>

        <LinearLayout
            android:id="@+id/itemBoard_boss_order_listview_row_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>